@page "{id:guid}"
@model TaskFlow.Web.Pages.Projects.EditModel

<h2>Edit Project</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="ProjectModel.Title" class="form-label"></label>
        <input asp-for="ProjectModel.Title" class="form-control" />
        <span asp-validation-for="ProjectModel.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ProjectModel.Description" class="form-label"></label>
        <textarea asp-for="ProjectModel.Description" class="form-control"></textarea>
        <span asp-validation-for="ProjectModel.Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
