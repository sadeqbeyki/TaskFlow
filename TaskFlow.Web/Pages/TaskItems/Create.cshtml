@page
@using TaskFlow.Core
@using TaskFlow.Core.Entities

@model TaskFlow.Web.Pages.TaskItems.CreateModel
@{
}

@if (TempData["Message"] != null)
{
<div class="alert alert-success">@TempData["Message"]</div>
}

<h2>Create New Task</h2>
<partial name="_ValidationScriptsPartial" />
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="taskItemModel.Title" class="form-label"></label>
        <input asp-for="taskItemModel.Title" class="form-control" />
        <span asp-validation-for="taskItemModel.Title" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="taskItemModel.Description" class="form-label"></label>
        <textarea asp-for="taskItemModel.Description" class="form-control"></textarea>
        <span asp-validation-for="taskItemModel.Description" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="taskItemModel.Priority" class="form-label"></label>
        <select asp-for="taskItemModel.Priority" class="form-select" asp-items="Html.GetEnumSelectList<TaskItemPriority>()"></select>
    </div>


    <div class="mb-3">
        <label asp-for="taskItemModel.Status" class="form-label"></label>
        <select asp-for="taskItemModel.Status" class="form-select" asp-items="Html.GetEnumSelectList<TaskItemStatus>()"></select>
    </div>


    <div class="mb-3">
        <label asp-for="taskItemModel.DueDate" class="form-label"></label>
        <input asp-for="taskItemModel.DueDate" type="date" class="form-control" />
    </div>


    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}