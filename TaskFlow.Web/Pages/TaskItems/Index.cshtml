@page
@model TaskFlow.Web.Pages.TaskItems.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Tasks for @Model.ProjectTitle</h2>

<a asp-page="/Tasks/Create" asp-route-projectId="@Request.Query["projectId"]" class="btn btn-primary mb-3">Create Task</a>

@if (!Model.TaskItems.Any())
{
    <div class="alert alert-info">No tasks yet.</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Priority</th>
                <th>Status</th>
                <th>Due</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model.TaskItems)
            {
                <tr>
                    <td>@t.Title</td>
                    <td>@t.Priority</td>
                    <td>@t.Status</td>
                    <td>@(t.DueDate?.ToLocalTime().ToString("yyyy-MM-dd") ?? "-")</td>
                    <td>
                        <a asp-page="/Tasks/Edit" asp-route-id="@t.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@t.Id" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

